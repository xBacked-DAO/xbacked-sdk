{
    "extends": ["tslint:recommended", "tslint-config-prettier"],
    "rules": {
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-snake-case"
          ]
    },
    "linterOptions": {
        "exclude": [
            "src/build/*",
            "node_modules", "**/__tests__/*", "src/build/*"
        ]
    }
 }
